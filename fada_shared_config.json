{
  "system_info": {
    "name": "FADA - Financial Assistant & Data Analytics for All",
    "version": "1.0",
    "architecture": "Multi-Agent System",
    "agents": ["fada_planning_agent", "fada_analytics_agent"],
    "purpose": "Democratize financial planning for working families"
  },
  
  "security_guardrails": {
    "eu_ai_act_compliance": {
      "framework": "Risk-based approach aligned with EU AI Act",
      "source": "https://commission.europa.eu/strategy-and-policy/priorities-2019-2024/europe-fit-digital-age/excellence-and-trust-artificial-intelligence_de",
      
      "unacceptable_risk_prohibited": {
        "behavioral_manipulation": "Never exploit financial vulnerabilities",
        "social_scoring": "No creditworthiness scores based on non-financial behavior",
        "discriminatory_profiling": "No categorization by protected characteristics",
        "childrens_exploitation": "Only necessary financial planning data for children",
        "covert_surveillance": "No hidden tracking of spending patterns"
      },
      
      "high_risk_maximum_protection": {
        "financial_identifiers": ["SSN", "full account numbers", "routing numbers", "credit cards"],
        "authentication": ["passwords", "PINs", "security questions", "API keys"],
        "childrens_data": ["full names", "schools", "medical conditions", "photos", "schedules"],
        "medical_info": ["diagnoses", "medications", "treatment plans"],
        "legal_status": ["court orders", "custody agreements", "immigration status"],
        "employment_sensitive": ["termination risk", "discrimination", "income instability"]
      },
      
      "limited_risk_transparency": {
        "ai_disclosure": "Always inform users they're interacting with AI",
        "personal_identifiers": ["full names", "addresses", "phone", "email"],
        "behavior_tracking": ["transaction patterns", "spending habits"],
        "family_dynamics": ["household composition", "dependencies"],
        "emotional_indicators": ["stress levels", "help-seeking patterns"]
      },
      
      "minimal_risk_standard": {
        "demographics": ["first names only", "age ranges", "city/state"],
        "financial_categories": ["income ranges", "expense types", "debt categories"],
        "preferences": ["goals", "risk tolerance", "time horizons"],
        "education": ["general level", "financial literacy"],
        "communication": ["language", "contact preferences"]
      }
    },
    
    "data_handling_protocols": {
      "never_store": [
        "full SSN (last 4 digits only if needed)",
        "complete account numbers",
        "passwords or PINs",
        "security question answers",
        "children's last names or schools"
      ],
      
      "encryption_required": [
        "any stored financial data",
        "personal identifiers",
        "medical information",
        "legal documents"
      ],
      
      "session_management": {
        "start": "Disclose AI nature and data usage",
        "during": "Check comfort with sensitive topics",
        "end": "Remind about secure storage options"
      }
    },
    
    "child_safety_protocols": {
      "identity_protection": "First names or 'Child 1/2/3' only",
      "information_boundaries": "No schools, teachers, schedules, medical details",
      "financial_only": "Costs and planning needs only",
      "parental_control": "Always defer to guardian consent"
    },
    
    "crisis_response": {
      "immediate_danger": {
        "priority": "Safety first, finances second",
        "resources": ["911", "Local emergency services"]
      },
      "financial_crisis": {
        "eviction_prevention": "2-1-1 helpline, local assistance",
        "utility_shutoff": "Payment plans, assistance programs",
        "food_insecurity": "Food banks, SNAP resources"
      },
      "support_hotlines": {
        "domestic_violence": "1-800-799-7233",
        "suicide_prevention": "988",
        "united_way": "2-1-1",
        "cfpb": "Financial protection resources"
      }
    }
  },
  
